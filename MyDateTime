import java.nio.channels.GatheringByteChannel;

public class MyDateTime extends MyDate{
	
	protected int second;
	protected int minutes;
	protected int hours;
	
	public MyDateTime(int hh, int mi, int ss, int dd, int mm, int yy ){
		super(dd, mm, yy);
		setHours(hh);
		setMinutes(mi);
		setSeconds(ss);
		
	}
	
	public MyDateTime(int hh, int mi, int ss){
		
	}
	
	public MyDateTime(){
		
	}

	public int getSecond() {
		return second;
	}

	public void setSeconds(int ss) {
		if(ss < 0 && ss>60){
			ss = 1;
		}
		
		this.second = ss;
	}

	public int getMinutes() {
		
		return minutes;
	}

	public void setMinutes(int mi) {
		if(mi < 0 && mi>60){
			mi = 1;
		}
		this.minutes = mi;
	}

	public int getHours() {
		return hours;
	}

	public void setHours(int hh) {
		if(hh < 0 && hh>23){
			hh = 1;
		}
		this.hours = hh;
	}

	@Override
	public String toString() {
		return "MyDateTime [second=" + second + ", minutes=" + minutes + ", hours=" + hours + "]";
	}
	
	public boolean equals (Object o){
		if(! (o instanceof MyDateTime)) return false;
		
		MyDateTime a = (MyDateTime) o ;
		
		return  getYear() == a.getYear() && getMonth() == a.getMonth() && getDay() == a.getDay() && getHours() == a.getHours() && getMinutes() == a.getMinutes() && getSecond() == a.getSecond();
	}
	
	public MyDateTime clone(){
		return new MyDateTime (getHours(), getMinutes(), getSecond(), getDay(), getMonth(), getYear());
	}
	
	public void next(){
		int horas = getHours();
		int minutos = getMinutes();
		int segundos = getSecond();
		
		segundos = segundos + 1;
		if(segundos == 60 && minutos == 60 && horas == 23){
			segundos = 1;
			minutos = 1;
			horas = 0;
			
		}else if (segundos == 60 && minutos == 60 && horas < 23){
			segundos = 1;
			minutos = minutos + 1;
			horas = horas + 1;
		}else if(segundos < 60 && minutos < 60){
			segundos = segundos + 1;
			minutos = minutos + 1;
		}
	}
